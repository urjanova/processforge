{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hydraulic Flowsheet Configuration Schema",
  "type": "object",
  "required": [
    "streams",
    "units",
    "simulation"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "streams": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "required": [
            "P",
            "T",
            "flowrate"
          ],
          "properties": {
            "P": {
              "type": "number",
              "minimum": 100.0
            },
            "T": {
              "type": "number",
              "minimum": 0.0
            },
            "flowrate": {
              "type": "number",
              "minimum": 0.0
            },
            "z": {
              "type": "object"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "recycle_streams": {
      "type": "object",
      "description": "Initial guesses for recycle/tear streams in closed-loop flowsheets",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "required": [
            "P",
            "T",
            "flowrate"
          ],
          "properties": {
            "P": {
              "type": "number",
              "minimum": 100.0,
              "description": "Pressure in Pa"
            },
            "T": {
              "type": "number",
              "minimum": 0.0,
              "description": "Temperature in K"
            },
            "flowrate": {
              "type": "number",
              "minimum": 0.0,
              "description": "Molar flowrate in mol/s"
            },
            "z": {
              "type": "object",
              "description": "Mole fractions of components"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "units": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "required": [
            "type",
            "in",
            "out"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Pump",
                "Valve",
                "Strainer",
                "Tank",
                "Pipes"
              ]
            },
            "in": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Single inlet stream name"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Multiple inlet stream names (e.g., for Tank with feed + recycle)"
                }
              ]
            },
            "out": {
              "type": "string"
            },
            "deltaP": {
              "type": "number"
            },
            "efficiency": {
              "type": "number"
            },
            "pressure_ratio": {
              "type": "number"
            },
            "delta_p": {
              "type": "number"
            },
            "diameter": {
              "type": "number"
            },
            "volume": {
              "type": "number"
            },
            "initial_level": {
              "type": "number"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "simulation": {
      "type": "object",
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "steady",
            "dynamic"
          ]
        },
        "t0": {
          "type": "number",
          "description": "Start time for dynamic simulation"
        },
        "tf": {
          "type": "number",
          "description": "End time for dynamic simulation"
        },
        "dt": {
          "type": "number",
          "description": "Time step for dynamic simulation"
        },
        "recycle": {
          "type": "object",
          "description": "Configuration for recycle loop convergence",
          "properties": {
            "max_iterations": {
              "type": "integer",
              "default": 100,
              "description": "Maximum iterations for steady-state recycle convergence"
            },
            "tolerance": {
              "type": "number",
              "default": 1e-6,
              "description": "Convergence tolerance (relative error)"
            },
            "tear_streams": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Optional: manually specify tear stream names. If not provided, auto-detected."
            },
            "acceleration_method": {
              "type": "string",
              "enum": [
                "direct",
                "wegstein"
              ],
              "default": "wegstein",
              "description": "Acceleration method for steady-state convergence"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}